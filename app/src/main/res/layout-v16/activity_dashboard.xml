<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srisri.doodle.Dashboard">

    <Button
        android:id="@+id/polls_participated_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/polls_created_button"
        android:layout_marginTop="40dp"
        android:onClick="openEvent3"
        android:text="@string/polls_participated" />

    <Button
        android:id="@+id/create_event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="38dp"
        android:onClick="openEvent"
        android:text="@string/create_event" />

    <Button
        android:id="@+id/polls_created_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/create_event_button"
        android:layout_marginTop="39dp"
        android:onClick="openEvent2"
        android:text="@string/polls_created" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/dashboard"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/event_invite_pending"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/pending_invites_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/event_invite_pending"
        android:layout_centerHorizontal="true"
        android:text="Pending Invites"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</RelativeLayout>
